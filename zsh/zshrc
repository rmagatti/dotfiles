# Git commit with branch name before customized message
function gitc() {
  if [ -z "$1" ];
  then
    echo WARN: No commit message was given. Running git commit without a message.
    git commit
  else
    branch="$(git symbolic-ref --short HEAD)"
    ticket="$(grep -Eo '(?i)sc[0-9]+|sc-[0-9]+|ENG.*-[0-9]+' <<< \"$branch\")"
    pair=($(grep -Eo '[[:alpha:]]+|[0-9]+' <<< \"$ticket\"))
    prefix="$pair[1]:u-$pair[2]"
    if [ -z "$ticket" ];
    then
      git commit -m "$1"
    else
      git commit -m "$prefix: $1"
    fi
  fi
}

function gitf () {
    git for-each-ref --format='%(refname:short)' refs/heads/ | while read branch; do
    # Find the merge base between the potential parent branch and the current HEAD
    base=$(git merge-base --all $branch HEAD)

    # Check if the merge base is the commit immediately before the current HEAD.
    # Note: This specific check might not always align with the common understanding
    # of "branched off from", which is typically the commit the branch was created *at*.
    # A more common check related to merge-base and branching might involve
    # looking for a common ancestor that represents the point of divergence.
    # However, this function implements the logic you requested.

    # We should iterate over merge bases if there are multiple, though typically one.
        for b in $base; do
            if [ "$b" = "$(git rev-parse HEAD^)" ]; then
                echo "Current branch might have branched from $branch (based on HEAD^ merge base)"
            fi
        done
    done
}

function gitcan() {
  git commit --amend --no-edit
}

function gitca() {
  git commit --amend
}

function gclone() {
  git clone git@github.com:Montra-Interactive/$1.git ~/Projects/Montra/$1 && cd ~/Projects/Montra/$1
}



function gitsqa() {
  git reset $(git merge-base origin/master $(git rev-parse --abbrev-ref HEAD)) &&
  git add -A && git commit
}

function gitsqi() {
  git rebase -i $(git merge-base master $(git rev-parse --abbrev-ref HEAD)) &&
}

